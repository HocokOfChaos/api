@page
@using RoshdefAPI.Admin.Services.Core
@inject IJsonViewLocalizer Localizer
@model RegisterModel
@{
    ViewData["Title"] = @Localizer["LoginPage.Register"];
}

<h3 class="box-title">@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" role="alert">
                        <div asp-validation-summary="ModelOnly" class="text-black"></div>
                        <span asp-validation-for="Input.Login" class="text-black"></span>
                        <span asp-validation-for="Input.Password" class="text-black"></span>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-black"></span>
                        <span asp-validation-for="Input.APIKey" class="text-black"></span>
                    </div>
                }
            <div class="form-floating mb-4">
                <input asp-for="Input.Login" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Login">@Localizer["LoginPage.Login"]</label>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password">@Localizer["LoginPage.Password"]</label>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">@Localizer["LoginPage.ConfirmPassword"]</label>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Input.APIKey" class="form-control" aria-required="true" />
                <label asp-for="Input.APIKey">@Localizer["LoginPage.APIKey"]</label>
            </div>
            <button id="registerSubmit" type="submit" class="btn w-100 btn-danger d-none d-md-block pull-right hidden-xs hidden-sm waves-effect waves-light text-white">@Localizer["LoginPage.Register"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
